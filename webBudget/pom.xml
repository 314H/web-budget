        <hibernate.validator.version>5.1.2.Final</hibernate.validator.version>
    </properties>
    
    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>env</name>
                    <value>development</value>
                </property>
            </activation>
            <properties>
                <application.version>${project.version}</application.version>
                <db.connectionURL>jdbc:mysql://localhost:3306/webbudget</db.connectionURL>
                <db.username>sa_webbudget</db.username>
                <db.password>sa_webbudget</db.password>
                <orm.show_sql>true</orm.show_sql>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>production</value>
                </property>
            </activation>
            <properties>
